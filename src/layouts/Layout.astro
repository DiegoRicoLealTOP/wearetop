---
import "@fontsource/lato/100.css";
import "@fontsource/lato/300.css";
import "@fontsource/lato/400.css";
import "@fontsource/lato/700.css";
import "@fontsource/lato/900.css";

import Head from "@/components/head.astro";
import BodyMetaTags from "@/components/body-meta-tags.astro";
import TopBar from "@/components/top-bar.astro";
import Footer from "@/components/footer.astro";
import Globals from "@/components/globals.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  ogUrl?: string;
}

const {
  title,
  description = "No somos una agencia. Ofrecemos consultoría en educación internacional. Cada año, nuestros estudiantes viven la mejor experiencia de sus vidas, en escuelas de idiomas con el mejor mix de nacionalidades, Summer Camps, Universidades TOP 100 QS, Russell group, escuelas de negocios y colegios alrededor del mundo.",
  ogUrl = "/images/og.png",
} = Astro.props;
---

<!doctype html>
<html lang="es" class="overflow-x-hidden scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <Head title={title} description={description} ogUrl={ogUrl} />
  </head>
  <body class="overflow-x-hidden">
    <BodyMetaTags />
    <TopBar />
    <slot />
    <Globals />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    scroll-padding-top: 64px;
  }

  body {
    font-family:
      "Lato",
      system-ui,
      -apple-system,
      "Segoe UI",
      Roboto,
      "Helvetica Neue",
      sans-serif;
  }
</style>
