---
import StaffordHouseLogo from "@/icons/logos/staffordhouse.svg";
---

<section
  class="bg-cgray-100 flex flex-col justify-center gap-6 p-4 py-12 md:py-24"
>
  <ul
    class:list={[
      "item-center flex list-none flex-wrap justify-center gap-x-8 gap-y-3 p-0 md:gap-x-12 md:gap-y-4",
    ]}
  >
    <li>
      <img
        src="/images/logos/kingseducation.png"
        alt="Kings Education Logo"
        height="40"
        class="h-12 w-auto md:h-16"
      />
    </li>
    <li>
      <img
        src="/images/logos/stgiles-international.png"
        alt="St Giles International Logo"
        height="40"
        class="h-12 w-auto md:h-16"
      />
    </li>
    <li>
      <StaffordHouseLogo
        aria-label="Stafford House Logo"
        class="h-12 w-auto md:h-16"
      />
    </li>
  </ul>
</section>
