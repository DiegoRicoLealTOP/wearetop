---
import { Icon } from "astro-icon/components";
---

<section
  class="min-h-screen bg-black after:absolute after:inset-0 after:bg-dotted-overlay"
>
  <video
    class="absolute inset-0 mx-auto h-screen w-full object-cover object-bottom"
    src="/videos/MBA.mp4"
    playsinline
    muted
    loop
    autoplay></video>

  <a
    role="button"
    href="#pricing"
    class="absolute inset-x-0 bottom-0 z-10 mx-auto hidden w-fit animate-bounce lg:block"
    aria-label="Scroll down"
  >
    <Icon name="mouse" class="size-6 text-white lg:size-10" />
  </a>
</section>
